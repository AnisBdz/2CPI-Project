<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../assets/font.css"  prefHeight="180.0" prefWidth="330.0" spacing="10.0" style="-fx-background-color: #309bd1;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.CabinetSetupController">
    <Label style="-fx-text-fill: white;" text="Nom du cabinet :">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <JFXTextField fx:id="name_field" focusColor="WHITE" style="-fx-text-fill: white;" unFocusColor="#ffffff80" />

    <Label style="-fx-text-fill: white;" text="Adresse du cabinet :">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Label>
    <JFXTextField fx:id="adresse_field" focusColor="WHITE" style="-fx-text-fill: white;" unFocusColor="#ffffff80" />
   <HBox alignment="TOP_RIGHT" style="-fx-text-fill: white;">
      <children>

          <JFXButton fx:id="save_btn" style="-fx-background-color: #186d97;" text="Sauvgarder" textFill="WHITE">
            <padding>
               <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
            </padding>

            <graphic>
                <FontAwesomeIconView fill="WHITE" glyphName="SAVE" />
            </graphic>
          </JFXButton>
      </children>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
   </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
