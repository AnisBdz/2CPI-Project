<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../assets/font.css"  prefHeight="100.0" prefWidth="400.0" spacing="5.0" style="-fx-background-color: #309bd1" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.NewExamenController">
   <children>

                  <Label alignment="CENTER" text="Nom : " textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
            </Label>

      <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
          <children>
              <JFXTextField fx:id="name" focusColor="WHITE" prefHeight="25.0" style="-fx-text-fill: white;" unFocusColor="#ffffff80" HBox.hgrow="ALWAYS">
                  <VBox.margin>
                      <Insets bottom="20.0" />
                  </VBox.margin>
              </JFXTextField>
            <JFXButton fx:id="btnSave" alignment="CENTER" mnemonicParsing="false" prefWidth="110.0" style="-fx-background-color: #186D97;" text="Sauvegarder" textFill="WHITE">
                <graphic>
                    <FontAwesomeIconView fill="WHITE" glyphName="SAVE" />
                </graphic>
               <padding>
                  <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
               </padding>
            </JFXButton>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
